# RevBot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Stripe Configuration (Required for payment processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# RevBot Operational Limits (Safety Controls)
MAX_DAILY_SPEND=100
AUTO_SCALE_THRESHOLD=50
SERVICE_KILL_THRESHOLD=-10

# Environment
NODE_ENV=development

# MCP Server Configuration
MEMORY_SERVER_PORT=3000
STRIPE_SERVER_PORT=3001

# Webhook URLs (for external services)
WEBHOOK_BASE_URL=http://localhost:3001